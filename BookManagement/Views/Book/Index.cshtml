@model List<Book>


<h1>List of Books </h1>

<h3><a asp-controller="Book" asp-action="Create">Create New Book</a></h3>

<table class="table table-sm table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Author</th>
            <th>Price</th>
            <th>Publication</th>
            <th>BookType</th>
            <th>Created</th>
            <th>Updated</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bk in Model)
        {
            <tr>
                <td>@bk.Id</td>
                <td>@bk.Name</td>
                <td>@bk.Author</td>
                <td>@bk.Price</td>
                <td>@bk.Publication</td>
                <td>@bk.BookType</td>
                <td>@bk.Created</td>
                <td>@bk.Updated</td>
                <td>
                    <a asp-action="Update" asp-controller="Book" asp-route-Id="@bk.Id">Update</a>

                </td>
                <td>
                    <a asp-action="Delete" asp-controller="Book" asp-route-Id="@bk.Id" onclick="return confirm('Are you Sure?')">Delete</a>

                </td>
            </tr>
        }


    </tbody>
</table>
